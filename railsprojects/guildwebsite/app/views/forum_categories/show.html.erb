<h2>
  <%=h @forum_category.name %> <br />
</h2>

<% @forum_category.forum_topics.find(:all, :order => "updated_at DESC", :limit => 3).each do |topic| %>
	<div>
		<h3 style="display: inline;"><%=h topic.name %></h3>
		<p style="display: inline;">
			<%=h topic.user.login %> <%=h topic.updated_at.to_s(:standard) %>
		</p>
	</div>
<% end %>